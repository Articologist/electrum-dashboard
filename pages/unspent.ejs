<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link href="https://cdn.datatables.net/1.11.0/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet">
    
    <link id="dark-theme-style" rel="stylesheet"/>
    <link href="./css/style.css" rel="stylesheet">

    <title>Unspent</title>

    <style>
    </style>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/<%= basePath %>"><%= domain %></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/<%= basePath %>/unspent">Unspent</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Switch Crypto
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="/bitcoin">Bitcoin</a></li>
                <li><a class="dropdown-item" href="/litecoin">Litecoin</a></li>
                <li><a class="dropdown-item" href="/bitcoin-cash">Bitcoin Cash</a></li>
                <li><a class="dropdown-item" href="/ethereum">Ethereum</a></li>
              </ul>
            </li>
          </ul>
          <a href="javascript:void()" class="btn btn-outline-light btn-md ml-auto font-weight-bold" id="theme-toggler" onclick="toggleTheme()"></a>
        </div>
      </div>
    </nav>

    <div class="container-xxl mt-5">
      <div class="row">
        <div class="col-12 p-3">
          <p class="h1">Unspent <%= crypto %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-12 mt-4">
          <div class="card mb-3">
            <div class="card-body">
              <h3 class="card-title">
                List unspent transactions: <code><%= total.toFixed(8) %></code> <%= crypto %>
              </h3>
            </div>
          </div>
          <table class="table table-bordered mt-4" id="listunspent">
            <thead>
              <tr>
                <th scope="col">Hash</th>
                <th scope="col">Height</th>
                <th scope="col">Address</th>
                <th scope="col">Value</th>
                <th scope="col">Sequence</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i = 0; i < listunspent.length; i++) { %>
                <tr>
                  <td><%= listunspent[i].prevout_hash %></td>
                  <td><%= listunspent[i].height %></td>
                  <td><%= listunspent[i].address %></td>
                  <td><%= listunspent[i].value %></td>
                  <td><%= listunspent[i].nsequence %></td>
                </tr>
            <% } %>
            </tbody>
          </table>
        </div>
      </div>

    </div>

      
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.0/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.0/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="./js/theme.js"></script>

    <script>
      $(document).ready(() => {
        $('#listunspent').DataTable()
      })
    </script>
  </body>
</html>